  "item": [
    {
      "name": "Website Config",
      "item": [
        {
          "name": "GET website-config by domain",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/website-config/{{domain}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "website-config",
                "{{domain}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is expected for GET route', function () {",
                  "  pm.expect([200, 400, 401, 403, 404]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response is JSON', function () {",
                  "  pm.response.to.be.json;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "POST website-config",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-WP-Nonce",
                "value": "{{wp_nonce}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"{{domain}}\",\n  \"subdomain\": \"{{subdomain}}\",\n  \"config\": {\n    \"title\": \"Test from Postman\",\n    \"updatedFrom\": \"postman\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/website-config",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "website-config"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is expected for save config', function () {",
                  "  pm.expect([200, 400, 401, 403, 429]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response is JSON', function () {",
                  "  pm.response.to.be.json;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET website legacy endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/website/{{domain}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "website",
                "{{domain}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is expected for GET route', function () {",
                  "  pm.expect([200, 400, 401, 403, 404]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response is JSON', function () {",
                  "  pm.response.to.be.json;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET site-config (legacy query endpoint)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/site-config?subdomain={{subdomain}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "site-config"
              ],
              "query": [
                {
                  "key": "subdomain",
                  "value": "{{subdomain}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is expected for GET route', function () {",
                  "  pm.expect([200, 400, 401, 403, 404]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response is JSON', function () {",
                  "  pm.response.to.be.json;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "GET wp-nonce",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/wp-nonce",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "wp-nonce"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 or 401', function () {",
                  "  pm.expect([200, 401]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response is JSON', function () {",
                  "  pm.response.to.be.json;",
                  "});",
                  "if (pm.response.code === 200) {",
                  "  var body = pm.response.json();",
                  "  pm.test('Nonce exists on success', function () {",
                  "    pm.expect(body.nonce).to.be.a('string').and.not.empty;",
                  "  });",
                  "  pm.environment.set('wp_nonce', body.nonce);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
